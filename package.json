{
  "name": "zedmemes-modular",
  "version": "2.0.0",
  "description": "ZedMemes - Modular meme sharing platform",
  "main": "index-modular.html",
  "scripts": {
    "start": "echo 'Open index-modular.html in your browser to start development'",
    "serve": "npx http-server . -p 3000 -o index-modular.html",
    "lint:css": "npx stylelint 'src/**/*.css'",
    "lint:js": "npx eslint 'src/**/*.js'",
    "format": "npx prettier --write 'src/**/*.{html,css,js}'",
    "build": "echo 'Production build system not yet implemented'"
  },
  "keywords": [
    "memes",
    "social",
    "entertainment",
    "javascript",
    "css",
    "html",
    "modular",
    "components"
  ],
  "author": "ZedMemes Team",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "stylelint": "^15.10.1",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "directories": {
    "src": "./src",
    "assets": "./assets",
    "components": "./src/components",
    "styles": "./src/styles",
    "js": "./src/js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/zedmemes.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/zedmemes/issues"
  },
  "homepage": "https://github.com/yourusername/zedmemes#readme"
}
